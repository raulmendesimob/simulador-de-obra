<script>
function formatarMoeda(campo) {
  let valor = campo.value.replace(/\D/g, "");
  if (valor === "") return campo.value = "";
  valor = (valor / 100).toFixed(2) + "";
  valor = valor.replace(".", ",");
  valor = valor.replace(/\B(?=(\d{3})+(?!\d))/g, ".");
  campo.value = "R$ " + valor;
}

function parseMoeda(valor) {
  return parseFloat(valor.replace("R$", "").replace(/\./g, "").replace(",", ".") || 0);
}

function parseNumero(valor) {
  return parseFloat(valor.replace(",", ".") || 0);
}

function atualizarTudo() {
  const entrada = parseMoeda(document.getElementById("valorEntrada").value);
  const meses = parseFloat(document.getElementById("prazo").value);
  const incc = parseNumero(document.getElementById("incc").value) / 100;

  // Mensais
  const qtdMensal = parseFloat(document.getElementById("qtdMensal").value);
  const valorMensal = parseMoeda(document.getElementById("valorMensal").value);

  if (qtdMensal && valorMensal && incc && meses) {
    const ultima = valorMensal * Math.pow((1 + incc), qtdMensal - 1);
    const aumento = (ultima - valorMensal) / (qtdMensal - 1);
    document.getElementById("ultimaMensal").innerText =
      "Ãšltima Corrigida: R$ " + ultima.toLocaleString("pt-BR", {minimumFractionDigits: 2});
    document.getElementById("aumentoMensal").innerText =
      "Aumento MÃ©dio Mensal: R$ " + aumento.toLocaleString("pt-BR", {minimumFractionDigits: 2});
  }

  // IntermediÃ¡rias
  const qtdInter = parseFloat(document.getElementById("qtdInter").value);
  const valorInter = parseMoeda(document.getElementById("valorInter").value);

  if (qtdInter && valorInter && incc && meses) {
    const intervalo = meses / qtdInter;
    const ultima = valorInter * Math.pow((1 + incc), meses);
    const primeira = valorInter * Math.pow((1 + incc), intervalo);
    const aumentoInter = (ultima - primeira) / (qtdInter - 1);
    document.getElementById("ultimaInter").innerText =
      "Ãšltima Corrigida: R$ " + ultima.toLocaleString("pt-BR", {minimumFractionDigits: 2});
    document.getElementById("aumentoInter").innerText =
      "Aumento MÃ©dio: R$ " + aumentoInter.toLocaleString("pt-BR", {minimumFractionDigits: 2});
  }

  // PÃ³s-Chaves
  const valorPos = parseMoeda(document.getElementById("valorPos").value);
  const qtdPos = parseFloat(document.getElementById("qtdPos").value);

  if (valorPos && qtdPos && meses && incc) {
    const corrigido = valorPos * Math.pow((1 + incc), meses);
    const parcelaContrato = valorPos / qtdPos;
    const parcelaCorrigida = corrigido / qtdPos;
    document.getElementById("posContrato").innerText =
      "Parcela em Contrato: R$ " + parcelaContrato.toLocaleString("pt-BR", {minimumFractionDigits: 2});
    document.getElementById("posCorrigido").innerText =
      "Parcela Corrigida: R$ " + parcelaCorrigida.toLocaleString("pt-BR", {minimumFractionDigits: 2});
  }
}
</script>

